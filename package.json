{
    "name": "vscode-ionic-snippets",
    "displayName": "Ionic v4 Snippets",
    "description": "Ionic v4 snippets for VS Code by Marc Julian",
    "version": "0.0.4",
    "publisher": "marcjulian",
    "icon": "images/ionic-light-icon.png",
    "galleryBanner": {
        "color": "#3880ff",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/fivethree-team/vscode-ionic-snippets.git"
    },
    "bugs": {
        "url": "https://github.com/fivethree-team/vscode-ionic-snippets/issues"
    },
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Snippets"
    ],
    "keywords": [
        "Ionic",
        "Ionic v4",
        "TypeScript",
        "HTML",
        "Snippets"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello"
    ],
    "main": "./out/extension",
    "contributes": {
        "snippets": [
            {
                "language": "html",
                "path": "./snippets/html.json"
            },
            {
                "language": "scss",
                "path": "./snippets/scss.json"
            },
            {
                "language": "typescript",
                "path": "./snippets/typescript.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "vscode:publish": "vsce publish"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}