{
    "ion-button": {
        "prefix": "i-button",
        "body": [
            "<ion-button>",
            "\t${1:Click me}",
            "</ion-button>"
        ],
        "description": "<ion-button>"
    },
    "ion-button-w-icon": {
        "prefix": "i-button-icon",
        "body": [
            "<ion-button>",
            "\t<ion-icon slot=\"${1:icon-only}\" name=\"${2:add}\"></ion-icon>",
            "</ion-button>"
        ],
        "description": "<ion-button> with <ion-icon>"
    },
    "ion-col": {
        "prefix": "i-col",
        "body": [
            "<ion-col size=\"${1:12}\"></ion-col>"
        ],
        "description": "<ion-col> with size"
    },
    "ion-content": {
        "prefix": "i-content",
        "body": [
            "<ion-content>",
            "</ion-content>"
        ],
        "description": "<ion-button>"
    },
    "ion-grid": {
        "prefix": "i-grid",
        "body": [
            "<ion-grid>",
            "\t<ion-row>",
            "\t\t<ion-col size=\"${1:12}\"></ion-col>",
            "\t</ion-row>",
            "</ion-grid>"
        ],
        "description": "<ion-grid> with <ion-row> and <ion-col>"
    },
    "ion-fab": {
        "prefix": "i-fab",
        "body": [
            "<ion-fab vertical=\"${1:bottom}\" horizontal=\"${2:end}\" slot=\"${3:fixed}\">",
            "\t<ion-fab-button>",
            "\t\t<ion-icon name=\"${4:add}\"></ion-icon>",
            "\t</ion-fab-button>",
            "</ion-fab>"
        ],
        "description": "<ion-fab>"
    },

    "ion-icon": {
        "prefix": "i-icon",
        "body": [
            "<ion-icon slot=\"${1:start}\" name=\"${2:add}\"></ion-icon>"
        ],
        "description": "<ion-icon>"
    },
    "ion-menu-button": {
        "prefix": "i-menu-button",
        "body": [
            "<ion-buttons slot=\"start\">",
            "\t<ion-menu-button></ion-menu-button>",
            "</ion-buttons>"
        ],
        "description": "<ion-menu-button>"
    },
    "ion-row": {
        "prefix": "i-row",
        "body": [
            "<ion-row>",
            "\t<ion-col size=\"${1:12}\"></ion-col>",
            "</ion-row>"
        ],
        "description": "<ion-row> with <ion-col>"
    },
    "scrollEvents": {
        "prefix": "i-scrollEvents",
        "body": [
            "[scrollEvents]=\"${1:true}\""
        ],
        "description": "Ionic [scrollEvents] binding"
    }

}